{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Liste des regions:</h1>
		<div class="row">
			{% for region in regions %}
				<div class="col-md-3">
					<div class="card border-secondary mb-3" style="max-width: 20rem;">
						<div class="card-header">{{region.code}}</div>
						<div class="card-body">
							<h5 class="card-title">{{region.nom}}</h5>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
